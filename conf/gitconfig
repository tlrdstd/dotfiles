[alias]
  br = branch
  ci = commit
  co = checkout
  d = diff
  dump = cat-file -p
  hist = log --graph --pretty=format:'%C(yellow)%h %C(red)|%C(yellow)%d%C(white) %s[%C(green)%an%C(white)] %C(cyan)%ad%C(white)' --date=relative
  histt = log --graph --pretty=format:\"%C(yellow)%h %C(white)%ad %C(red)|%C(white) %s%d [%C(green)%an%C(white)]\" --date=short
  review = log -p
  m = merge --no-ff --no-edit
  pr = remote prune origin
  st = status
  type = cat-file -t
  unstage = reset HEAD
  dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%ar%C(reset)%C(auto)%d%C(reset)%n%s' --date-order

[apply]
  whitespace = fix

[branch]
  autosetupmerge = true

[color]
  interactive = auto
  branch = auto
  diff = auto
  status = auto
  hist = auto
  all = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = red

[core]
  whitespace = trailing-space,space-before-tab
  pager = less -FMRiX

[diff]
  mnemonicprefix = true
  renames = copies

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[grep]
  extendedRegexp = true
  color = always

[merge]
  log = true
  tool = gvimdiff
  stat = true

[mergetool]
  keepBackup = false

[rerere]
  enabled = true
  autoupdate = true

[push]
  push = simple
